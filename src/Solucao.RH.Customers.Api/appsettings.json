  "Apis": {
    "CustomerHistory": {
      "BaseAddress": "http://localhost:9125",
      "EndPoints": {
        "HistCustomer": "api/v1/hist-customer",
        "HistContact": "api/v1/hist-contact",
        "HistAddress": "api/v1/hist-address"
      }
    }
