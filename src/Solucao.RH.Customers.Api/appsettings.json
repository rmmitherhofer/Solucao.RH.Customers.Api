  "NedMonitor": {
    "ProjectId": "e3f9a4b7-8c2d-4d5e-a7c1-9f12b3e45678",
    "ProjectType": "api",

    "MinimumLogLevel": "Information",

    "ExecutionMode": {
      "EnableNedMonitor": true,
      "EnableMonitorExceptions": true,
      "EnableMonitorNotifications": true,
      "EnableMonitorLogs": true,
      "EnableMonitorHttpRequests": true,
      "EnableMonitorDbQueries": true
    },

    "HttpLogging": {
      "WritePayloadToConsole": false,
      "CaptureResponseBody": true,
      "MaxResponseBodySizeInMb": 1
    },

    "SensitiveDataMasking": {
      "Enabled": true,
      "SensitiveKeys": [ "Teste1", "Teste2", "Tsst23" ],
      "MaskValue": "***"
    },

    "Exceptions": {
      "Expected": [ "DomainException" ]
    },

    "DataInterceptors": {
      "Ef": {
        //"Enabled": true,
        "CaptureOptions": [ "Query", "Parameters", "Context", "ExceptionMessage" ]
      }
      //"Dapper": {
      //  "Enabled": false,
      //  "CaptureOptions": [ "Query", "Parameters", "Context", "ExceptionMessage" ]
      //}
    },

    "RemoteService": {
      "BaseAddress": "https://localhost:9115",
      "Endpoints": {
        "NotifyLogContext": "api/v1/logs/context"
      }
    }
  },
  "SwaggleBox": {
    "Title": "Candidatos API",
    "Version": "v1",
    "Description": "API para gerenciamento de candidatos",
    "FixEnums": {
      "ApplyParameterFilter": true,
      "ApplyDocumentFilter": true,
      "ApplySchemaFilter": true,
      "DescriptionSource": 2,
      "IncludeDescriptions": true,
      "IncludeXEnumRemarks": true,
      "XEnumNamesAlias": true,
      "XEnumDescriptionsAlias": true,
      "NewLine": "\n"
    },
    "DefaultHeaders": {
      "XClientId": {
        "Enabled": true,
        "Required": true
      },
      "XForwardedFor": {
        "Enabled": false,
        "Required": false
      },
      "XCorrelationId": {
        "Enabled": false,
        "Required": false
      },
      "UserAgent": {
        "Enabled": false,
        "Required": false
      },
      "AdditionalHeaders": [
        {
          "Name": "X-Custom-Header",
          "Required": false,
          "Description": "Custom header added by user."
        },
        {
          "Name": "X-Another-Header",
          "Required": false,
          "Description": "Another required custom header."
        }
      ]
    }
  }
}
